<%= stylesheet_link_tag 'edit', :media => "all" %>

<div class="post-container">
    <p class="title">投稿フォーム</p>
    <%= form_for(@tweet, :url => { controller:'tweets', action:'update'})do |f| %>
    <%= f.label :編集内容 %>
        <br>
        <%= f.text_field :body,size: 140%>
        <br>
    <%= f.submit "送信"%>
    <br>
    <% end %>
</div>